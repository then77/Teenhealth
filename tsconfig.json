{
  "compilerOptions": {
    "target": "ES2015",
    "lib": [
      "ES2015",
      "DOM"
    ],
    "jsx": "react",
    "module": "ES2020",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./resources/scripts/*"
      ],
    },
    "types": ["node", "vite/client"],
    "sourceMap": true,
    "noEmit": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "./resources/scripts/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./public"
  ]
}
